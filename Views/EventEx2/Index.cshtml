
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm("DelEmp","EventEx2"))
{
    <h3>Enter Empno @Html.DropDownList("ddlEmpno",
                   new SelectList(ViewBag.EL,"Empno","Ename"),
                   "Select")
    </h3>
    <input type="submit" value="submit" onclick=" return func();" />
    if(ViewBag.msg!=null)
    {
        @ViewBag.msg;
    }
}
<script>
    function func()
    {
        var eno = document.getElementById("ddlEmpno").value;
        if (eno.length != 0)
        {
        var c = confirm("Do you want to delete");
        if (c == true)//this 'true' user enters
        {
            return true; //true indicates go to controller
        }
        else
        {
            return false;
        }
        }
        return false;
    }
</script>